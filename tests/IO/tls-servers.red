protos: [
	sslv3	0300h
	tls1.0	0301h
	tls1.1	0302h
	tls1.2	0303h
	tls1.3	0304h
]

debug: :print
;debug: :comment

new-event: func [event] [
    debug ["=== Subport event:" event/type]
    switch event/type [
        read  [
	        probe to-string event/port/data
	        close event/port
	    ]
    ]
]

new-client: func [port /local data] [
	debug ["=== New client ==="]
    port/awake: :new-event
    copy port
]

server1: open tls://:8023
server2: open tls://:8024

server1/extra: compose/deep [
    certs: [(cert1) (chain1)]
    key: (key1)
    min-protocol: (protos/tls1.1)
    max-protocol: (protos/tls1.3)
]

server2/extra: compose/deep [
    certs: [(cert2) (chain2)]
    key: (key2)
    min-protocol: (protos/tls1.2)
    max-protocol: (protos/tls1.3)
]

server1/awake: func [event] [
	debug "server 1"
    if event/type = 'accept [new-client event/port]
    false
]

server2/awake: func [event] [
	debug "server 2"
    if event/type = 'accept [new-client event/port]
    false
]

print "TLS server: waiting for client to connect"
if none? system/view [
	wait -1
]